# run = ["cargo", "run"]
run = "cargo run && cargo test"

entrypoint = "src/main.rs"

hidden = ["target", ".git", ".config"]

[packager]
language = "rust"

[packager.features]
packageSearch = true

[languages.rust]
pattern = "**/*.rs"

[languages.rust.languageServer]
start = "rust-analyzer"

[nix]
channel = "stable-21_11"